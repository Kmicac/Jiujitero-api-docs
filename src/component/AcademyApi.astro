---
import type { Academy } from "../models";
const API = 'https://jiujitero-api.onrender.com/api/v1/academys?limit=5';

let data: Academy[] = [];
let error = false;

try {
  const response = await fetch(API);
  if (response.ok) {
    data = await response.json() as Academy[];
  } else {
    error = true;
  }
} catch (e) {
  error = true;
  console.error('Error fetching academies:', e);
}
---

{error ? (
  <div class="error-message">
    <p>‚ö†Ô∏è Could not load academies.</p>
  </div>
) : data.length === 0 ? (
  <p>Loading academies...</p>
) : (
  <div class="academies-grid">
    {data.map((item) => (
      <article class="academy-card">
        <div class="academy-image">
          <img loading="lazy" src={item.image} alt={item.name} />
        </div>
        <div class="academy-content">
          <h3 class="academy-name">{item.name}</h3>
          <p class="academy-professor">{item.professor}</p>
          <p class="academy-location">üìç {item.location}</p>
          {item.phone && <p class="academy-phone">üìû {item.phone}</p>}
        </div>
      </article>
    ))}
  </div>
)}

<style>
  .academies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .academy-card {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .academy-card:hover {
    transform: translateY(-2px);
    border-color: var(--sl-color-text-accent);
  }

  .academy-image {
    width: 100%;
    height: 140px;
    overflow: hidden;
    background: var(--sl-color-gray-6);
  }

  .academy-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .academy-content {
    padding: 1rem;
  }

  .academy-name {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--sl-color-white);
  }

  .academy-professor {
    font-size: 0.9rem;
    color: var(--sl-color-gray-2);
    margin: 0 0 0.5rem 0;
  }

  .academy-location,
  .academy-phone {
    font-size: 0.85rem;
    color: var(--sl-color-gray-3);
    margin: 0.25rem 0;
  }

  .error-message {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid #f44;
    border-radius: 8px;
    padding: 1rem;
    color: #f66;
  }

  @media (max-width: 768px) {
    .academies-grid {
      grid-template-columns: 1fr;
    }
  }
</style>