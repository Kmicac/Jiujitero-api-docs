---
import type { Academy } from "../models";
const API = 'https://jiujitero-api.onrender.com/api/v1/academys?limit=5';

let data: Academy[] = [];
let error = false;

try {
  const response = await fetch(API);
  if (response.ok) {
    data = await response.json() as Academy[];
  } else {
    error = true;
  }
} catch (e) {
  error = true;
  console.error('Error fetching academies:', e);
}
---

{error ? (
  <div class="error-message">
    <p>‚ö†Ô∏è Could not load academies.</p>
  </div>
) : data.length === 0 ? (
  <p>Loading academies...</p>
) : (
  <div class="academies-grid">
    {data.map((item) => (
      <article class="academy-card">
        <div class="academy-image">
          <img loading="lazy" src={item.image} alt={item.name} />
        </div>
        <div class="academy-content">
          <h3 class="academy-name">{item.name}</h3>
          <p class="academy-professor">Professor: {item.professor}</p>
          <p class="academy-location">üìç {item.location}</p>
          {item.phone && <p class="academy-phone">üìû {item.phone}</p>}
        </div>
      </article>
    ))}
  </div>
)}

<style>
  .academies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .academy-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .academy-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .academy-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .academy-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .academy-card:hover .academy-image img {
    transform: scale(1.1);
  }

  .academy-content {
    padding: 1.5rem;
  }

  .academy-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    color: #1a202c;
  }

  .academy-professor {
    font-size: 1rem;
    color: #4a5568;
    margin: 0 0 0.5rem 0;
    font-weight: 500;
  }

  .academy-location,
  .academy-phone {
    font-size: 0.9rem;
    color: #718096;
    margin: 0.25rem 0;
  }

  .error-message {
    background: #fee;
    border: 1px solid #fcc;
    border-radius: 8px;
    padding: 1rem;
    color: #c33;
  }

  @media (max-width: 768px) {
    .academies-grid {
      grid-template-columns: 1fr;
    }
  }
</style>