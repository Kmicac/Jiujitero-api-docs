---
import type { Academy } from "../models";
const API = 'https://jiujitero-api.onrender.com/api/v1/academys?limit=5';

let data: Academy[] = [];
let error = false;

try {
  const response = await fetch(API);
  if (response.ok) {
    data = await response.json() as Academy[];
  } else {
    error = true;
  }
} catch (e) {
  error = true;
  console.error('Error fetching academies:', e);
}
---

{error ? (
  <div class="error-message">
    <p>⚠️ Could not load academies. The API might be starting up (this can take 30-50 seconds on first request).</p>
    <a href={API} target="_blank">Try opening the API directly</a>
  </div>
) : data.length === 0 ? (
  <p>Loading academies...</p>
) : (
  <div class='grid grid-5 not-content'>
    {data.map((item) => (
      <article>
        <img loading="lazy" src={item.image} alt={item.name} />
        <h3>{item.name}</h3>
        <p>{item.location}</p>
      </article>
    ))}
  </div>
)}