---
import type { Athlete } from "../models";
const API = 'https://jiujitero-api.onrender.com/api/v1/athletes?team=Alliance';

let data: Athlete[] = [];
let error = false;

try {
  const response = await fetch(API);
  if (response.ok) {
    data = await response.json() as Athlete[];
  } else {
    error = true;
  }
} catch (e) {
  error = true;
  console.error('Error fetching athletes:', e);
}
---

{error ? (
  <div class="error-message">
    <p>⚠️ Could not load athletes.</p>
  </div>
) : data.length === 0 ? (
  <p>Loading athletes...</p>
) : (
  <div class="athletes-grid">
    {data.map((item) => (
      <article class="athlete-card">
        <div class="athlete-header">
          <h3 class="athlete-name">{item.name} {item.lastName}</h3>
          {item.nickname && <span class="athlete-nickname">"{item.nickname}"</span>}
        </div>
        <div class="athlete-info">
          <span class="athlete-team">{item.team}</span>
          <span class="athlete-email">{item.email}</span>
        </div>
      </article>
    ))}
  </div>
)}

<style>
  .athletes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .athlete-card {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 8px;
    padding: 1rem;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .athlete-card:hover {
    transform: translateY(-2px);
    border-color: var(--sl-color-text-accent);
  }

  .athlete-header {
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .athlete-name {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: var(--sl-color-white);
  }

  .athlete-nickname {
    font-size: 0.85rem;
    font-style: italic;
    color: var(--sl-color-gray-3);
    display: block;
  }

  .athlete-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .athlete-team {
    font-weight: 500;
    font-size: 0.9rem;
    color: var(--sl-color-text-accent);
    background: var(--sl-color-gray-6);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    display: inline-block;
    width: fit-content;
  }

  .athlete-email {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
    word-break: break-all;
  }

  .error-message {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid #f44;
    border-radius: 8px;
    padding: 1rem;
    color: #f66;
  }

  @media (max-width: 768px) {
    .athletes-grid {
      grid-template-columns: 1fr;
    }
  }
</style>