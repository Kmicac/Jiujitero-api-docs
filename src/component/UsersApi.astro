---
import type { User } from "../models";
const API = "https://jiujitero-api.onrender.com/api/v1/users";

let data: User[] = [];
let error = false;

try {
  const response = await fetch(API);
  if (response.ok) {
    data = await response.json() as User[];
  } else {
    error = true;
  }
} catch (e) {
  error = true;
  console.error('Error fetching users:', e);
}
---

{error ? (
  <div class="error-message">
    <p>⚠️ Could not load users.</p>
  </div>
) : data.length === 0 ? (
  <p>Loading users...</p>
) : (
  <div class="users-grid">
    {data.map((item) => (
      <article class="user-card">
        <div class="user-avatar">
          <img loading="lazy" src={item.image} alt={item.name} />
        </div>
        <div class="user-info">
          <h3 class="user-name">{item.name}</h3>
          <p class="user-email">{item.email}</p>
          <div class="user-roles">
            {item.roles?.map((role) => (
              <span class="role-badge">{role}</span>
            ))}
          </div>
        </div>
      </article>
    ))}
  </div>
)}

<style>
  .users-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .user-card {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    color: white;
  }

  .user-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
  }

  .user-avatar {
    width: 80px;
    height: 80px;
    margin: 0 auto 1rem;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .user-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: white;
  }

  .user-email {
    font-size: 0.9rem;
    opacity: 0.9;
    margin: 0 0 1rem 0;
    word-break: break-all;
  }

  .user-roles {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .role-badge {
    background: rgba(255, 255, 255, 0.3);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .error-message {
    background: #fee;
    border: 1px solid #fcc;
    border-radius: 8px;
    padding: 1rem;
    color: #c33;
  }

  @media (max-width: 768px) {
    .users-grid {
      grid-template-columns: 1fr;
    }
  }
</style>