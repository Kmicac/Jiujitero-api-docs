---
import type { User } from "../models";
const API = "https://jiujitero-api.onrender.com/api/v1/users";

let data: User[] = [];
let error = false;

try {
  const response = await fetch(API);
  if (response.ok) {
    data = await response.json() as User[];
  } else {
    error = true;
  }
} catch (e) {
  error = true;
  console.error('Error fetching users:', e);
}
---

{error ? (
  <div class="error-message">
    <p>⚠️ Could not load users. The API might be starting up.</p>
    <a href={API} target="_blank">Try opening the API directly</a>
  </div>
) : data.length === 0 ? (
  <p>Loading users...</p>
) : (
  <div class="grid grid-5 not-content">
    {data.map((item) => (
      <article>
        <img loading="lazy" src={item.image} alt={item.name} />
        <h3>{item.name}</h3>
        <p>{item.email}</p>
      </article>
    ))}
  </div>
)}